rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Brand assets (design images, uploads) — qualquer usuário autenticado
    match /brand-assets/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Brand kit (logos, vault)
    match /brands/{path=**} {
      allow read, write: if request.auth != null;
    }

    // Default: deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
